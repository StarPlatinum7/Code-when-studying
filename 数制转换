#include <stdio.h>
int main()
{
	int i;
	int integer10, integer2,a;//a是余数
	int d[100] = { 0 };
	printf("输入一个十进制的数字\n");
	scanf_s("%d", &integer10);
	printf("它的八进制是%o\n十六进制是%x\n二进制是", integer10, integer10);
	for ( i = 0; i >= 0 ; i++)
	{
		a = integer10 % 2;
		integer10 = integer10 / 2;
		printf("current integer10=%d,a=%d,i=%d\n", integer10,a,i);
		d[i] = a;
		if (integer10 == 1)
		{
			break;
		}
	}

	printf("1");
	for ( i; i >= 0; i--)
	{
		printf("%d", d[i]);
	}
	return 0;
}
