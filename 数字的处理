#include <stdio.h>
int main()
{
	//给出一个不多于5位的整数，要求 1、求出它是几位数 2、分别输出每一位数字 3、按逆序输出各位数字，例如原数为321,应输出123
	int num,a,b,c,d,e,f,g,h,i;
	printf("请输入一个数\n");
	scanf_s("%d", &num);

	//判断有几位数
	if (num < 10)
	{
		printf("1\n");
		printf("%d\n", num);
	}
	else if ( num >= 10&&num<100)
	{
		printf("2\n");
		while (num > 0)
		{
			d = num % 10;
			printf("%d", d);
			num = num / 10;
		}

	}
	else if ( num >= 100&&num<1000)
	{
		printf("3\n");
		while (num> 0)
		{
			d = num % 10;
			printf("%d", d);
			num = num / 10;
		}

	}
	else if (num >= 1000&&num<10000)
	{
		printf("4\n");
		while (num > 0)
		{
			d = num % 10;
			printf("%d", d);
			num = num / 10;
		}

	}
	else
	{
		printf("5\n");
		while (num > 0)
		{
			d = num % 10;
			printf("%d", d);
			num = num / 10;
		}

	}
	
}
