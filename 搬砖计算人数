#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n, m = 0, w = 0, k = 0;//n为砖的数量
    int counter = 0;
    printf("请输入砖的数量");
    scanf_s("%d",&n);
    for (m = 0; m >= 0; m++)
    {
        if (3 * m <= n)
        {
            for (w = 0; w >= 0; w++)
            {                
                    k = (n - 3 * m - w) * 2;
                    if (k < 0)
                    {
                        break;
                    }
                    printf("男人有%d个，女人有%d个，小孩有%d个\n", m, w, k);
                    counter = counter + 1;
            }
        }
        else
        {
            break;
        }
    }
    printf("共有%d种", counter);
    return 0;
}
